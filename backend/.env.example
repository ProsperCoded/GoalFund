# API Gateway (Nginx)
API_GATEWAY_PORT=8080

# Payments Service
PAYMENTS_SERVICE_PORT=8081
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=
PAYSTACK_WEBHOOK_SECRET=
MONGODB_URI=mongodb://admin:admin123@localhost:27017/payments_db?authSource=admin

# Ledger Service
LEDGER_SERVICE_PORT=8082
LEDGER_DB_HOST=localhost
LEDGER_DB_PORT=5432
LEDGER_DB_USER=postgres
LEDGER_DB_PASSWORD=postgres
LEDGER_DB_NAME=ledger_db

# Goals Service
GOALS_SERVICE_PORT=8083
GOALS_DB_HOST=localhost
GOALS_DB_PORT=5432
GOALS_DB_USER=postgres
GOALS_DB_PASSWORD=postgres
GOALS_DB_NAME=goals_db

# Users Service
USERS_SERVICE_PORT=8084
USERS_DB_HOST=localhost
USERS_DB_PORT=5435
USERS_DB_USER=postgres
USERS_DB_PASSWORD=postgres
USERS_DB_NAME=users_db
USERS_DB_SSLMODE=disable

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters

# Notifications Service
NOTIFICATIONS_SERVICE_PORT=8085
NOTIFICATIONS_DB_HOST=localhost
NOTIFICATIONS_DB_PORT=5432
NOTIFICATIONS_DB_USER=postgres
NOTIFICATIONS_DB_PASSWORD=postgres
NOTIFICATIONS_DB_NAME=notifications_db

# RabbitMQ Notifications
NOTIFICATIONS_RABBITMQ_EXCHANGE=gofund_events
NOTIFICATIONS_RABBITMQ_QUEUE=notifications_queue

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@gofund.com
SMTP_FROM_NAME=GoFund

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Redis
REDIS_URL=redis://localhost:6379

# Datadog Configuration
# Get your API key from https://app.datadoghq.com/organization-settings/api-keys
DD_API_KEY=your-datadog-api-key-here
DD_SITE=datadoghq.com  # Use datadoghq.eu for EU, datadoghq.com for US

# Datadog Agent Connection (for services)
DD_AGENT_HOST=datadog-agent
DD_TRACE_AGENT_PORT=8126

# Environment and Version Tagging
DD_ENV=dev  # Options: dev, staging, production
DD_VERSION=1.0.0

# Service-specific (set per service, or use defaults in code)
# DD_SERVICE is set automatically per service in docker-compose.yml
